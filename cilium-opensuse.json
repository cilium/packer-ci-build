{
  "variables": {
    "box_basename": "opensuse-tumbleweed",
    "cpus": "8",
    "disk_size": "40960",
    "headless": "true",
    "iso_checksum": "cf379c00089bda7bfab9b28f92fb3ff246e066521e1c11adf29c64074c39dacf",
    "iso_checksum_type": "sha256",
    "iso_url": "http://download.opensuse.org/tumbleweed/iso/openSUSE-Tumbleweed-NET-x86_64-Snapshot20180122-Media.iso",
    "memory": "4096",
    "name": "opensuse-tumbleweed",
    "template": "opensuse-tumbleweed-amd64",
    "version": "TIMESTAMP",
    "cloud_token": "{{ env `VAGRANTCLOUD_TOKEN` }}",
    "BUILD_ID": "{{ env `BUILD_ID` }}",
    "NAME_PREFIX": "{{ env `NAME_PREFIX` }}",
    "NAME_SUFFIX": "{{ env `NAME_SUFFIX` }}",
    "CILIUM_BRANCH": "{{ env `CILIUM_BRANCH` }}"
  },
  "builders": [
    {
      "boot_command": [
        "<esc><enter><wait>",
        "linux ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "netdevice=eth0 ",
        "netsetup=dhcp ",
        "lang=en_US ",
        "textmode=1 ",
        "autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/opensuse.xml ",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "OpenSUSE_64",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "output_directory": "packer-{{user `template`}}-virtualbox",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_pty": true,
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `memory` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{ user `cpus` }}"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `template` }}-{{ user `NAME_PREFIX` }}{{ user `BUILD_ID` }}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "provision/env.bash",
      "destination": "/tmp/env.bash"
    },
    {
      "type": "shell",
      "environment_vars": [
        "ENV_FILEPATH=/tmp/env.bash",
        "CILIUM_BRANCH={{ user `CILIUM_BRANCH` }}",
        "NAME_PREFIX={{ user `NAME_PREFIX` }}"
      ],
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "expect_disconnect": true,
      "scripts": [
        "third_party/openSUSE-vagrant/scripts/base/wait.sh",
        "third_party/openSUSE-vagrant/scripts/base/base.sh",
        "third_party/openSUSE-vagrant/scripts/base/vmtools.sh",
        "third_party/openSUSE-vagrant/scripts/base/sshd.sh",
        "third_party/openSUSE-vagrant/scripts/base/bindfs.sh",
        "third_party/openSUSE-vagrant/scripts/base/vagrant.sh",
        "third_party/openSUSE-vagrant/scripts/base/cleanup.sh",
        "provision/vagrant.sh",
        "provision/opensuse/install.sh",
        "provision/opensuse/docker.sh",
        "provision/opensuse/etcd.sh",
        "provision/swap.sh",
        "provision/golang.sh",
        "provision/registry.sh",
        "provision/pull-images.sh"
      ]
    }
  ],
  "post-processors": [
    [{
      "output": "cilium-ginkgo-opensuse-{{user `NAME_PREFIX`}}{{user `BUILD_ID`}}.box",
      "type": "vagrant",
      "compression_level": 9,
      "keep_input_artifact": false
    }, {
      "type": "shell-local",
      "inline": [
        "/usr/bin/aws s3 cp cilium-ginkgo-opensuse-{{user `NAME_PREFIX`}}{{user `BUILD_ID`}}.box s3://ciliumvagrantbaseboxes/"
      ]
    }],[{
      "output": "cilium-ginkgo-opensuse-{{user `NAME_PREFIX`}}{{user `BUILD_ID`}}.box",
      "type": "vagrant",
      "compression_level": 9,
      "keep_input_artifact": false
    },{
      "type": "vagrant-cloud",
      "box_tag": "cilium/opensuse{{user `NAME_SUFFIX`}}",
      "access_token": "{{user `cloud_token`}}",
      "version": "{{ user `BUILD_ID` }}",
      "box_download_url": "https://s3-us-west-2.amazonaws.com/ciliumvagrantbaseboxes/cilium-ginkgo-opensuse-{{user `NAME_PREFIX`}}{{user `BUILD_ID`}}.box"
    }]
  ]
}

